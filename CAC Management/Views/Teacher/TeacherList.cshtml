@model List<CAC_Management.Models.Teacher>

@{
    Layout = "_LayoutForAdmin";
    ViewData["Title"] = "Teacher List";
}

<h1 style="text-align:center">Teacher List</h1>
<body style="background-color: #309369;align-content: center;">
    <div class="container" style="width: 20%;">
        <div class="form-group">
            <div class="input-group-addon">
                <form asp-controller="Teacher" asp-action="Search">
                    <input placeholder="Search By Id" class="form-control" name="id" />
                    <a asp-controller="Teacher" asp-action="Search" asp-route-id="id"><input type="submit" value="Search" /></a>
                </form>
            </div>
        </div>
    </div>
    <div class="container">
        <table border="1" class="table table-bordered" cellpadding="1" cellspacing="1">
            <thead>
                <tr>
                    <td style="text-align:center; font-weight: bold;">Teacher Id</td>
                    <td style="text-align:center; font-weight: bold;">Teacher Name</td>
                    <td style="text-align:center; font-weight: bold;">Contact</td>
                    <td style="text-align:center; font-weight: bold;">Address</td>
                    <td style="text-align:center; font-weight: bold;">Email</td>
                    <td style="text-align:center; font-weight: bold;">Password</td>
                    <td style="text-align:center; font-weight: bold;">Salary</td>
                    <td style="text-align:center; font-weight: bold;">Paid Amount</td>
                    <td style="text-align:center; font-weight: bold;">Payment Status</td>
                    <td style="text-align:center; font-weight: bold;">Action</td>
                </tr>
            </thead>
            @foreach (var f in Model)
            {
                <tr>
                    <td style="text-align:center">@f.TeacherId</td>
                    <td style="text-align:center">@f.TeacherName</td>
                    <td style="text-align:center">@f.Contact</td>
                    <td style="text-align:center">@f.Address</td>
                    <td style="text-align:center">@f.Email</td>
                    <td style="text-align:center">@f.Password</td>
                    <td style="text-align:center">@f.Salary</td>
                    <td style="text-align:center">@f.PaidAmount</td>
                    @if (f.Payment_Status == 0)
                    {
                        <td style="text-align:center">Paid</td>
                    }
                    else
                    {
                        <td style="text-align:center">Due</td>
                    }
                    <td style="text-align:center">
                        <a asp-action="TeacherDetails" asp-route-id="@f.TeacherId" class="btn btn-primary">Details</a>
                        <a asp-action="EditTeacher" asp-route-id="@f.TeacherId" class="btn btn-primary">Edit</a>
                        <a asp-action="DeleteTeacher" asp-route-id="@f.TeacherId" class="btn btn-primary">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</body>
