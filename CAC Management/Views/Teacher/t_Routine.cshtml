@model IEnumerable<CAC_Management.Models.st_routine>
@{
    ViewData["Title"] = "RoutineIndex";
    Layout = "_LayoutForTeacher";

}

<body style="background-color: #309369;align-content: center;">
    <div style="margin:15px;">
        <center> <h2>Teacher Routine List</h2></center> 
        <br />
        <div>
            <center>
                <form method="get" asp-action="t_Routine">
                    <div class="form-group">
                        <div class="col-sm-2">
                            <input placeholder="Enter Name" type="text" name="search" />
                        </div>
                        <div class="col-sm-1">
                            <input placeholder="Enter Name" value="Search" type="submit" class="btn btn-primary btn-sm" />
                        </div>
                    </div>
                </form>
            </center>
            
        </div>
        
        <br />    <br />

        <table class="table table-bordered">
            <tr>
                <th>
                    @Html.DisplayNameFor(m => m.FirstOrDefault().day)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.FirstOrDefault().sub)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.FirstOrDefault().time)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.FirstOrDefault().instructor)
                </th>
              
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(p => item.day)
                    </td>
                    <td>
                        @Html.DisplayFor(p => item.sub)
                    </td>
                    <td>
                        @Html.DisplayFor(p => item.time)
                    </td>
                    <td>
                        @Html.DisplayFor(p => item.instructor)
                    </td>
                </tr>
            }

        </table>

    </div>
</body>